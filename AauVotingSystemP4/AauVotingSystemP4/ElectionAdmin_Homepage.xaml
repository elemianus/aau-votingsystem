<Page x:Class="AauVotingSystemP4.ElectionAdmin_Homepage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AauVotingSystemP4"
      mc:Ignorable="d" 
      d:DesignHeight="300"
        Title="ElectionAdmin_Homepage" Width="575.961">
    <Grid Margin="0,0,0,-94">
        <Button x:Name="CreateElection" Content="Create Election" HorizontalAlignment="Left" Margin="199,105,0,0" VerticalAlignment="Top" Width="75" Click="createElection_Click"/>
        <Button x:Name="admin_election" Content="Administrate election" HorizontalAlignment="Left" Margin="296,105,0,0" VerticalAlignment="Top" Width="75" Click="admin_election_Click"/>

        <ListView Name="nominationDistrictListView" Margin="88,130,88,155" Width="400"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name of nomination district" Width="150" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Number of mandates" Width="120" DisplayMemberBinding="{Binding Mandates}" />
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <ListView Name="ZipDistrictListView" Margin="88,260,88,24" Width="400"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Zipcode" Width="120" DisplayMemberBinding="{Binding ZipCodeId}" />
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="NominationDistrictClick_PreviewMouseLeftButtonDown" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <Button x:Name="editZipCodeButton" Content="Edit zipcode" HorizontalAlignment="Left" Height="25" Margin="233,375,0,-6" VerticalAlignment="Top" Width="119"/>
        <Button x:Name="createZipCodeButton" Content="Create zipcode" HorizontalAlignment="Left" Height="25" Margin="88,375,0,-6" VerticalAlignment="Top" Width="119"/>
        <Button x:Name="removeButton" Content="Remove zipcode" HorizontalAlignment="Left" Height="25" Margin="369,375,0,-6" VerticalAlignment="Top" Width="119"/>
    </Grid>
</Page>
